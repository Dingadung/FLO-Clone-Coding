<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/detail_ll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/detail_album_last_sort_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
        <ImageButton
            android:id="@+id/detail_album_last_sort_ib"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/dd"
            />

    </LinearLayout>




    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="15dp"
        android:id="@+id/album_song_list_Sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_img_1_iv"
                    android:layout_width="370dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_video_exp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/detail_album_video_1_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[MV] Coin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_1_iv"
                    app:layout_constraintTop_toBottomOf="@+id/video_img_1_iv"/>
                <TextView
                    android:id="@+id/detail_album_video_singer_1_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU) | 2021.03.26"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_1_iv"
                    app:layout_constraintTop_toBottomOf="@+id/detail_album_video_1_Tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_img_4_iv"
                    android:layout_width="370dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_video_exp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/detail_album_video_4_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[MV] Coin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_4_iv"
                    app:layout_constraintTop_toBottomOf="@+id/video_img_4_iv"/>
                <TextView
                    android:id="@+id/detail_album_video_singer_4_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU) | 2021.03.26"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_4_iv"
                    app:layout_constraintTop_toBottomOf="@+id/detail_album_video_4_Tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_img_2_iv"
                    android:layout_width="370dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_video_exp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/detail_album_video_2_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[MV] Coin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_2_iv"
                    app:layout_constraintTop_toBottomOf="@+id/video_img_2_iv"/>
                <TextView
                    android:id="@+id/detail_album_video_singer_2_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU) | 2021.03.26"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_2_iv"
                    app:layout_constraintTop_toBottomOf="@+id/detail_album_video_2_Tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/video_img_3_iv"
                    android:layout_width="370dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_video_exp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/detail_album_video_3_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[MV] Coin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_3_iv"
                    app:layout_constraintTop_toBottomOf="@+id/video_img_3_iv"/>
                <TextView
                    android:id="@+id/detail_album_video_singer_3_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유 (IU) | 2021.03.26"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="@+id/video_img_3_iv"
                    app:layout_constraintTop_toBottomOf="@+id/detail_album_video_3_Tv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>