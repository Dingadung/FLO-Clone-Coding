<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_information_Sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/detail_album_information_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/detail_album_name_Tv"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="앨범명"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                    app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                    app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"/>
                <TextView
                    android:id="@+id/detail_album_name_cnt_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="IU 5th Album 'LILAC'"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                    app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                    app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:id="@+id/detail_artist_Tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="아티스트"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                        />
                    <TextView
                        android:id="@+id/detail_artist_cnt_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="아이유 (IU)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                        android:layout_weight="5"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:id="@+id/detail_publish_Tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="발매사"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                        />
                    <TextView
                        android:id="@+id/detail_publish_cnt_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="카카오 엔터테인먼트"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                        android:layout_weight="5"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:id="@+id/detail_entertainment_Tv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="기획사"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                        />
                    <TextView
                        android:id="@+id/detail_entertainment_cnt_Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="EDAM엔터테인먼트"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintTop_toTopOf="@+id/album_song_list_title_01_Tv"
                        app:layout_constraintBottom_toBottomOf="@+id/album_song_list_title_01_Tv"
                        android:layout_weight="5"/>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/detail_album_information_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범정보"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_album_information_ll"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/detail_album_information_cnt_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_album_information_Tv"
                android:layout_marginStart="10dp"
                android:text="@string/detail_album_information1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>